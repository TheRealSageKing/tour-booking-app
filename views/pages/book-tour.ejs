<%- include('../partials/frontend/header') -%>

<div class="flex min-h-full flex-col justify-center px-6 py-8 lg:px-8">
	<div class="mt-44 sm:mx-auto sm:w-full sm:max-w-md w-1/2">
		<ol class="items-center w-full space-y-4 sm:flex sm:space-x-8 sm:space-y-0 rtl:space-x-reverse mb-8">
			<li class="flex items-center text-purple-600 space-x-2.5 rtl:space-x-reverse">
				<span class="flex items-center justify-center w-8 h-8 border border-purple-600 rounded-full shrink-0"> 1 </span>
				<span>
					<h3 class="font-medium leading-tight">Booking info</h3>
					<p class="text-sm">Tour details</p>
				</span>
			</li>
			<li class="flex items-center text-gray-500 dark:text-gray-400 space-x-2.5 rtl:space-x-reverse">
				<span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0 dark:border-gray-400"> 2 </span>
				<span>
					<h3 class="font-medium leading-tight">User info</h3>
					<p class="text-sm">Step details here</p>
				</span>
			</li>
		</ol>

		<p class="border-l-4 p-4 mb-10" id="alert-pane"></p>
		<form class="space-y-6" action="#" method="POST" id="login-form">
			<div id="tab1" class="space-y-6">
				<div>
					<label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
					<div class="mt-2">
						<input id="email" name="email" type="email" autocomplete="email" required class="block w-full rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" />
						<!-- <small class="text-red-500" data-parent="email">Email field is required</small> -->
					</div>
				</div>

				<div>
					<div class="flex items-center justify-between">
						<label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
						<div class="text-sm">
							<a href="/auth/reset-password" class="font-semibold text-purple-600 hover:text-purple-500">Forgot password?</a>
						</div>
					</div>
					<div class="mt-2">
						<input id="password" name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" />
						<!-- <small class="text-red-500" data-parent="password">Password field is required</small> -->
					</div>
				</div>
				<div>
					<button type="button" class="flex w-full justify-center rounded-md bg-purple-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600">Next Step</button>
				</div>
			</div>
			<div id="tab2" class="space-y-6">
				<div>
					<label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
					<div class="mt-2">
						<input id="email" name="email" type="email" autocomplete="email" required class="block w-full rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" />
						<!-- <small class="text-red-500" data-parent="email">Email field is required</small> -->
					</div>
				</div>

				<div>
					<div class="flex items-center justify-between">
						<label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
						<div class="text-sm">
							<a href="/auth/reset-password" class="font-semibold text-purple-600 hover:text-purple-500">Forgot password?</a>
						</div>
					</div>
					<div class="mt-2">
						<input id="password" name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 px-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" />
						<!-- <small class="text-red-500" data-parent="password">Password field is required</small> -->
					</div>
				</div>
			</div>
			<div>
				<button type="submit" class="flex w-full justify-center rounded-md bg-purple-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600">Sign in</button>
			</div>
		</form>

		<p class="mt-10 text-center text-sm text-gray-500">
			Not a member?
			<a href="/auth/signup" class="font-semibold leading-6 text-purple-600 hover:text-purple-500">Sign up now</a>
		</p>
	</div>
</div>
<script type="text/javascript">
	$("#alert-pane").hide();
</script>
<%- include('../partials/frontend/footer') -%>
